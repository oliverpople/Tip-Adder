{
"manifest_version": 2,
    "name": "Tip Adder",
    "description": "Adds a tip to online prices",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage"
       ],
    "browser_action": {
        "default_icon": "002-animals.png",
        "default_popup": "popup.html"
    },
    "icons": { "128": "002-animals.png"}
}
